<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/marginAllSides">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSearchFragment_ProfilePic"
            android:layout_width="@dimen/profilePictureWidthSize"
            android:layout_height="@dimen/profilePictureWidthSize"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:src="@drawable/darth_vader"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivSearchFragment_ProfilePic"
                    android:layout_width="@dimen/profilePictureWidthSize"
                    android:layout_height="@dimen/profilePictureWidthSize"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:src="@drawable/darth_vader"/>
                <ImageView
                    android:id="@+id/ivSearchFragment_ProfilePic"
                    android:layout_width="@dimen/profilePictureWidthSize"
                    android:layout_height="@dimen/profilePictureWidthSize"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:src="@drawable/darth_vader"/>
                <ImageView
                    android:id="@+id/ivSearchFragment_ProfilePic"
                    android:layout_width="@dimen/profilePictureWidthSize"
                    android:layout_height="@dimen/profilePictureWidthSize"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:src="@drawable/darth_vader"/>
                <ImageView
                    android:id="@+id/ivSearchFragment_ProfilePic"
                    android:layout_width="@dimen/profilePictureWidthSize"
                    android:layout_height="@dimen/profilePictureWidthSize"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:src="@drawable/darth_vader"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emptyTweetBase"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewHeightSize"
            android:background="@color/colorAccent"/>

    </LinearLayout>
</LinearLayout>