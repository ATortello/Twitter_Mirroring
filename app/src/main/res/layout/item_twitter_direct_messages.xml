<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/marginAllSides">
        <ImageView
            android:id="@+id/ivProfilePicture_tab_all_comments"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_picture_3"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/marginAllSides"
        android:layout_marginBottom="@dimen/marginAllSides"
        android:layout_marginEnd="@dimen/marginAllSides">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/directMessageFragment_PublicUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/directMessageFragment_PublicUserName"
                android:textColor="@color/white"
                android:layout_marginEnd="1dp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_verified_account_blue_logo"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="1dp"/>

            <TextView
                android:id="@+id/directMessageFragment_RealUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/marginSmallAllSides"
                android:text="@string/directMessageFragment_RealUserName"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/directMessageFragment_PublishDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/directMessageFragment_PublishDate"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/directMessageFragment_MessageText"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="@dimen/marginSmallAllSides"/>

    </LinearLayout>
</LinearLayout>