<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DateAndTimeGrayText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/dateAndDeviceTextSize</item>
    </style>

    <style name="LabelsGrayText">
        <item name="android:layout_marginStart">@dimen/marginSmallAllSides</item>
        <item name="android:layout_marginEnd">@dimen/marginSmallAllSides</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/metricsTweetDetailTextSize</item>
    </style>

    <style name="MetricsGrayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/marginMinimal</item>
        <item name="android:layout_marginEnd">@dimen/marginAllSides</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/metricsTweetFeedTextSize</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="MetricsWhiteText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/metricsTweetDetailTextSize</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Setting no Title since we already have a Toolbar and apps colors -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/backgroundDark</item>

        <!-- Setting fullscreen size and no floating -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>

        <!-- Setting screen background -->
        <item name="android:windowBackground">#FFF</item>

        <!-- Setting animations to enter and exit detail screen -->
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>